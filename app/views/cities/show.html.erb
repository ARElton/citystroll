<div class="has-text-centered">
<h1 class="title is-1"><%= @city.name %>, <%= @city.country %></h1>
</div>

 <div class="section">
    <div class="container">
        <%@city.posts.each do |post|%>
            <div class="media">
              <div class="media-content">
              <h2 class="title is-3"><%= link_to post.title, post_path(post) %></h2>
            
              <%y_link = YouTubeRails.youtube_embed_url_only(post.link)%>
              <iframe class="has-ratio" width="320" height="180"src=<%="#{y_link}"%> frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              
              <br>
              <br>
              <%end%>
            </div>
        </div>
    </div>
</div> 
