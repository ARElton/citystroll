<div class="has-text-centered">
    <h3 class="title is-1">Cities</h3>
</div>

<%if flash[:city_error]%>
    <p class="content is-medium" ><%=flash[:city_error]%></p>
<%end%>

<div class="hero">
    <div class="hero-body">
        <% @cities.each do |city| %>
            <div class="has-text-centered">
                <div>
                                    
                    <div class="has-text-centered">
                            <p class="title is-3"><%= link_to city.name, city_path(city) %> ||<%= city.country %></p> 
                    </div>
                                   
                </div>
            </div> 
        <% end %>
    </div>
</div>