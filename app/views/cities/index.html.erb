<div class="has-text-centered">
    <h3 class="title is-1">Cities</h3>
</div>

<div class="hero">
    <div class="hero-body">
        <%if flash[:city_error]%>
        <div class="notification is-warning">
            <p><%=flash[:city_error]%></p>
        </div>
        <%end%>
        <% @cities.each do |city| %>
            <div class="has-text-centered">
                <div>              
                    <div class="has-text-centered">
                        <div class="block">
                            <div class="box">
                                <div class="has-text-centered">
                                    <p class="title is-1">
                                        <%= link_to city.name, city_path(city) %>, <%= city.country %>
                                            <div class="media">
                                                <div class="media-content">
                                                    <p class="title is-3"> <%= link_to city.posts.first.title, post_path(city.posts.first.id) %></p>
                                                    <%y_link = YouTubeRails.youtube_embed_url_only(city.posts.first.link)%>
                                                    <iframe class="has-ratio" width="320" height="180"src=<%="#{y_link}"%> frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                                </div>
                                            </div>
                                    </p>
                                </div>
                            </div>
                        </div>                 
                    </div>
                </div> 
            </div>
        <% end %>
    </div>
</div>