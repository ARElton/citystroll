<!DOCTYPE html>
<html>
  <head>
    <title>Citystroll</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <h1>citystroll</h1>

  <ul class="nav">
      <li><%= link_to "Cities", cities_path%></li>
      <%if @current_user%>
      <li><%= link_to "Upload", new_post_path %></li>
      <li><%= link_to "My Posts", user_path(@current_user.id)%></li>
      <li><%= link_to "Favorites", favorites_path(@current_user.id) %></li>
      <%end%>

      <% if @current_user %>
        <li><%= link_to "Logout", logout_path, method: :delete  %></li>
        <li>Welcome <%= @current_user.name.capitalize %></li>
      <% else %>
        <li><%= link_to "Sign Up", new_user_path %></li>
        <li><%= link_to "Login", new_login_path %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>

 