<!DOCTYPE html>
<html>
  <head>
    <title>Citystroll</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <ul class="nav">
      <li><%= link_to "Cities", cities_path%></li>
      <li><%= link_to "Create A Post", new_post_path %></li>
      <li><%= link_to "Take a Walk", cities_path %></li>
      <li><%= link_to "View my Posts"%></li>

      <% if @current_user %>
        <li class="right"><%= link_to "Logout", logout_path, method: :delete  %></li>
        <li class="right">Welcome <%= @current_user.name.capitalize %></li>
      <% else %>
        <li class="right"><%= link_to "Sign Up", new_user_path %></li>
        <li class="right"><%= link_to "Login", new_login_path %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>

 