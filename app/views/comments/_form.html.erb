<div class="pb-3">
    <%= simple_form_for([@post, @post.comments.build]) do |f| %>
        <%= f.hidden_field :user_id, value: @current_user.id %>
        <div class="field">
            <div class="control">
                <%= f.input :text, label: "Leave a Reply", input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
            </div>
        </div>
        <%= f.button :submit, 'Submit', class: 'button is-primary' %>
    <% end %> 
</div>