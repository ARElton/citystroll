
<h3 class="title is-4">Leave a Reply:</h3>

<%= simple_form_for([@post, @post.comments.build]) do |f| %>
    <%= f.hidden_field :user_id, value: @current_user.id %>
    <div class="field">
        <div class="control">
        <%= f.input :text, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>
    <%= f.button :submit, 'Leave a reply', class: 'button is-primary' %>
<% end %> 