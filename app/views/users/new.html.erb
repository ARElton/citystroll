
<%if flash[:user_errors]%>
<ul>
    <%=flash[:user_errors].each do |error|%>
    <li><%=error%></li>
    <%end%>
</ul>
<%end%>


 <div class="section">
<%= simple_form_for @user do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :username, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :password, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <%= f.button :submit, 'Create new user', class: "button is-primary" %>
<% end %>
</div>